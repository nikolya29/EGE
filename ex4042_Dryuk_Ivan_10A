File = open("ex4042.txt")
s = File.readlines()
#расстояние между символами
r=0
maxx=0
for i in s:
    if i.count('E')<20:
        #счёт с самого первого символа массива до самого последнего
        for j in range(0,len(i)):
            #отрицательный индекс
            n=-1
            #положительный индекс
            m=len(i)
            #счёт с самого последнего индекса массива до самого первого
            while(n!=-len(i)-1):
                if str(i[j])==str(i[n]):
                    r=m-j-1
                    if r<0:
                        r=0
                    if r>maxx:
                        maxx=r
                n-=1
                m-=1
print(maxx)
